<project xmlns="http://mavem.apache.org/POM/4.0.O"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://mavem.apache.org/POM/4.0.O"
http://mavem.apache.org/xsd/maven-4.0.0.xsd">
<modelVersion>4.0.0</modelVersion>
<groupId>com.example</groupId>
<artifactId>helloworld</artifactId>
<version>1.0-SNAPSHOT</version>
<build>
    <plugins>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>3.8.0</version>
            <configuration>
                <source>11</source>
                <target>11</source>
            </configuration>
        </plugin>
        <plugin>
            <artifactId>org.codehaus.mojo</artifactId>
            <groupId>exec-maven-plugin</groupId>
            <version>1.6.0</version>
            <configuration>
                <mainClass>com.example.HelloWorld</mainClass>
            </configuration>
        </plugin>
    </plugins>
</build>
